  "devDependencies": {
    "@colyseus/testing": "^0.15.2",
    "@colyseus/tools": "^0.15.35",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "colyseus": "^0.15.15",
    "eslint": "^8.45.0",
